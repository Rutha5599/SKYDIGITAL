<%-include('manager-header')%>
  <div class="clearfix"></div>

  <div class="content-wrapper">
    <div class="container-fluid">
      <div class="row">
        <div class="col-lg-12">
          <div class="card">
            <div class="card-body ">
              <h5 class="card-title">Student Update Data</h5>
              <div class="table-responsive">
                <form action="/manager/updatepage/<%=datastudent.id%>" method="post" enctype="multipart/form-data">
                  <div class="form-group">
                    <label for="input-1">Student Name</label>
                    <input type="text" name="studentname" value="<%=datastudent.studentname%>" class="form-control" id="input-1" placeholder="Enter Your Student Name">
                   </div>
                   <div class="form-group">
                    <label for="input-2">FATHER NAME</label>
                    <input type="text" name="fathername" value="<%=datastudent.fathername%>" class="form-control" id="input-2" placeholder="Enter Your Father Name">
                   </div>
                   <div class="form-group">
                    <label for="input-2">Email ID</label>
                    <p>OLD EMAIL:-<%=datastudent.studentemailid%></p>
                    <input type="email" name=""  class="form-control" id="email" placeholder="Enter Your Email ID">
                   </div>
                   <div class="form-group">
                    <label for="input-3">STUDENT Address</label>
                    <input type="text" name="studentaddress" value="<%=datastudent.studentaddress%>" class="form-control" id="input-4" placeholder="Enter Your Student Mobile Number">
                   </div>
                   <div class="form-group">
                    <label for="input-3">STUDENT MOBILE Number</label>
                    <input type="number" name="studentmobile" value="<%=datastudent.studentmobile%>" class="form-control" id="input-4" placeholder="Enter Your Student Mobile Number">
                   </div>
                   <div class="form-group">
                    <label for="input-4">FATHER MOBILE Number</label>
                    <input type="number" name="fathermobile" value="<%=datastudent.fathermobile%>" class="form-control" id="input-5" placeholder="Enter Your Father Mobile Number">
                   </div>
                   <div class="form-group">
                    <label for="input-4">BANCH TIME</label>
                    <div class="form-group">
                      <% var banchtime = ['08:00 AM', '09:00 AM','10:00 AM','11:00 AM','12:00 PM','01:00 PM','02:00 PM','03:00 PM','04:00 PM','05:00 PM','06:00 PM','07:00 PM']; %>
                      <select name="banchtime" class="form-control" aria-label="Default select example">
                        <option value="" selected> select city</option>
                        <% banchtime.forEach((v, i) => { %>
                          <option value="<%= v %>" <% if(datastudent.banchtime == v) { %> <%= "selected" %> <% } %>><%= v %></option>
                        <% }); %>
                      </select>
                      </div>
                   </div>
                   <div class="form-group">
                    <label for="input-4">COURSE</label>
                    <input type="text" name="course" value="<%=datastudent.course%>" class="form-control" id="input-4" placeholder="Enter Your Student Course">
                   </div>
                   <div class="form-group">
                    <label for="input-4">FEES</label>
                    <input type="number" name="fees" value="<%=datastudent.fees%>" class="form-control" id="input-4" placeholder="Enter Your Student Fees">
                   </div>
                   <div class="form-group">
                    <label for="input-4">Student Image</label>
                    <input type="file" name="img" class="form-control" id="input-4" style="color:#a1bdd2 !important;">
                    <img src="<%=datastudent.img%>" alt="" width="20px">
                  </div>
                   <div class="form-group">
                    <label for="input-5">ADDMISION DATE</label>
                    <input type="date"  name="addmisiondate" value="<%=datastudent.addmisiondate%>" class="form-control" id="input-5" style="color:#a1bdd2 !important;">
                   </div>
                   <div class="form-group py-2">
                     <div class="icheck-material-white">
                    <input type="checkbox" id="user-checkbox1" checked=""/>
                    <label for="user-checkbox1">I Agree Terms & Conditions</label>
                    </div>
                   </div>
                   <div class="form-group">
                    <input type="submit" value="Submit" onclick="return fun()" class="btn btn-light px-5" >
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>

      <script>
        function fun(){

          // alert("em");
          var em = document.getElementById('email').value
        if(em == ''){
          document.getElementById('email').name='';
        }
        else{
          document.getElementById('email').name='studentemailid';
        }
        }
      </script>
      <%-include('footer')%>
